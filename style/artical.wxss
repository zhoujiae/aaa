
.container {
  background: #f8f9fb;
}
.articallist {
  width: 95%;
  margin: 20rpx auto;
  background: white;
  overflow: hidden;
}
.left {
  float: left;
  width: 50%;
}
.right {
  float: right;
  width: 48%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title {
  text-align: center;
  font-weight: bolder;
}
.text {
  color: gray;
  font-size: 30rpx;
  text-indent: 1em;
}
image {
  width: 100%;
  height: 250rpx;
  vertical-align: top;
}